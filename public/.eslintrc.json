{
  "env": {
    "node": true,
    "mocha": false
  },
  "extends": ["standard", "prettier"],
  "root": true,
  "rules": {
    "no-shadow": ["error", { "builtinGlobals": true }],
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
    "no-use-before-define": ["error", { "functions": true, "variables": true }]
  },
  "globals": {
    "requireLib": false
  }
}
